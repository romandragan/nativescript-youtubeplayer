
{
  "compilerOptions": {
      "noEmitOnError": true,
      "noEmitHelpers": true,
      "sourceMap": false,
      "removeComments": true,
      "declaration": true,
      "experimentalDecorators": true,
      "target": "ES2017",
      "module": "esnext",
      "lib": ["es6", "dom", "es2015.iterable"],
      "rootDir": ".",
      "baseUrl": ".",
      "paths": {
          "*": [
          "./node_modules/*"
          ]
      },
      "emitDecoratorMetadata": true,
      "moduleResolution": "node"
  },
  "files": [
      "angular/index.ts"
  ],
  "angularCompilerOptions": {
      "skipTemplateCodegen": true
  }
}
